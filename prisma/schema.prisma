generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CORE_TYPE {
    SOLID
    GAS
}

model Planet {
  id               String @id @default(uuid())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  name             String
  vol              String
  mass             String
  factOne          String
  factTwo          String
  factThree        String
  coreType         CORE_TYPE

  moon  Moon[]
}

model Moon {
  id               String @id @default(uuid())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  name             String
  historyOfName    String
  size             Int

  planetId String
  planet   Planet @relation(fields: [planetId], references: [id])
}